<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="profile_layout_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/profile_label</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="profile_layout_edit" parent="profile_layout_label">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/profile_edit</item>
        <item name="android:enabled">false</item>
        <item name="android:editable">false</item>
    </style>

    <style name="setting_layout_tv" parent="profile_layout_label">
        <item name="android:textColor">#5d5d5d</item>
    </style>

    <style name="task_activity_button">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:background">@drawable/button_add</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="task_activity_tv_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">26dp</item>
        <item name="android:paddingLeft">7dp</item>
        <item name="android:textColor">@color/task_tv_color</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="stage_layout_button">
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/button_circle_shape_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="stage_layout_selected_button" parent="stage_layout_button">
        <item name="android:background">@drawable/button_circle_shape_orange</item>
    </style>

    <style name="assignment_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/assignment_textview_color</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="assignment_tv_name" parent="assignment_tv">
        <item name="android:textColor">@color/assignment_textview_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="currentstage_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/currentstage_label_color</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="ass_checkbox_styel" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:button">@null</item>
        <item name="android:drawableTop">@drawable/ass_checkbox_selector</item>
    </style>

    <style name="BaseDialog" parent="@android:style/Theme.Dialog" />

    <style name="Theme.Light.FullScreenDialogAct" parent="@style/BaseDialog">
        <item name="android:windowBackground">@drawable/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#ff555555</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>

    <style name="Style_Dialog_Button">
        <item name="android:textSize">16.0dip</item>
        <item name="android:textColor">#ff425968</item>
        <item name="android:background">@drawable/btn_default</item>
        <item name="android:layout_marginLeft">6.0dip</item>
        <item name="android:layout_marginRight">6.0dip</item>
        <item name="android:minHeight">40.0dip</item>
    </style>

    <style name="TextViewStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/font_value</item>
        <item name="android:textColorHint">@color/light_notes_color</item>
        <item name="android:textColorLink">@color/link_color</item>
        <item name="android:gravity">center_vertical</item>
    </style>

</resources>
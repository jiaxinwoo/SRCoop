<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/reference_item_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="70dp">


    <ImageView
        android:background="@drawable/icon_file"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="66dp">

        <LinearLayout
            android:orientation="horizontal"
            android:background="@drawable/referenceslist_image_title"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="24dp">
            <TextView
                android:gravity="center_vertical|center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#1f5a75"
                android:text="文件名:"
                android:layout_gravity="right" />
            <TextView
                android:id="@+id/fileName"
                android:gravity="center_vertical|center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#1f5a75"
                android:text="文件xxx"
                android:layout_gravity="right" />
        </LinearLayout>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="3dp">

            <Button
                android:id="@+id/references_download"
                android:background="@drawable/referenceslist_button_download"
                android:layout_width="76dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentRight="true"
                android:text="下载"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#825a12"
                />

            <LinearLayout
                android:orientation="vertical"
                android:layout_alignParentRight="true"
                android:layout_marginRight="96dp"
                android:layout_marginLeft="10dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">        

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:orientation="horizontal"
                        android:background="@drawable/problemslist_image_from"
                        android:layout_marginRight="10dp"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1.5">
                        <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:textColor="#1f5a75"
                            android:text="时间:" />
                        <TextView
                            android:id="@+id/uploadTime"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="24dp"
                            android:textSize="9dp"
                            android:textStyle="bold"
                            android:textColor="#1f5a75"
                            android:text="2014-12-28 19:05:11" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
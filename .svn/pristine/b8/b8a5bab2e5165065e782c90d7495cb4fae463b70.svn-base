<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!--显示当前路径的文本框  -->

    <!--列出当前路径下所有文件的ListView  -->
    <RelativeLayout
            android:id="@+id/file_path"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#2a94c5" >
		 <Button
		     android:id="@+id/file_back"
		     android:layout_width="wrap_content"
		     android:layout_height="wrap_content"
		     android:layout_alignParentLeft="true"
		     android:layout_alignParentTop="true"
		     android:background="@drawable/button_back" />
		 
		 <TextView
	        android:id="@+id/path"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:padding="8dp"
	        android:textColor="#fff"
	        android:layout_alignParentTop="true"
	        android:layout_toRightOf="@+id/file_back"
	        android:gravity="center_horizontal"
	        android:text="路径：" />

		 

	</RelativeLayout>
    <ListView
        android:id="@+id/list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/file_path"
        android:divider="#000"
        android:dividerHeight="1dp" >

    </ListView>

    <!--返回上一级目录的按钮  -->
    <!-- <Button
        android:id="@+id/file_parent"
        android:layout_width="38dp"
        android:layout_height="34dp"
        android:background="@drawable/achievement_edit_add"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/> -->


</RelativeLayout>

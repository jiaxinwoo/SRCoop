<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.srcoop_jhm.app.ProblemDisplay">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@drawable/referenceslist_image_statuebar"
        android:id="@+id/referencesList_image_statuebar">

        <Button
            android:id="@+id/referenceslist_image_back"
            android:background="@drawable/back_button"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_width="33dp"
            android:layout_height="33dp"/>

        <TextView
            android:id="@+id/problems"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical|center_horizontal"
            android:layout_width="wrap_content"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:text="参考资料列表"
            android:layout_height="30dp"/>


        <Button
            android:id="@+id/add_references_button"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/add_button"/>
    </RelativeLayout>

    <ListView
        android:id="@+id/referenceslist_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
